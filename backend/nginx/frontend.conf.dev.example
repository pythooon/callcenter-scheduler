server {
    listen 80;
    server_name call-center.pythdev.pl;

    location /.well-known/acme-challenge/ {
        root /var/www/app/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name call-center.pythdev.pl;

    ssl_certificate /etc/letsencrypt/live/call-center.pythdev.pl/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/call-center.pythdev.pl/privkey.pem;

    root /var/www/app/build;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    auth_basic "Access Denied";
    auth_basic_user_file /etc/nginx/.htpasswd;
}
